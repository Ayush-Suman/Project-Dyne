<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="RatingsBarCustom" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:color">@color/colorAccent</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">3.4</item>
        <item name="android:stepSize">0.01</item>
    </style>

    <style name="customfontstyle" parent="android:Widget.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:background">#25292F</item>
        <item name="android:textSize">26dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
