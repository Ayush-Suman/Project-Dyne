<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView2"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="6dp"
    android:baselineAligned="false"
    app:cardBackgroundColor="#323C48"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cardView"
            android:fontFamily="@font/open_sans_light"
            android:maxWidth="180dp"
            android:maxLines="1"
            android:text="R K Fitness Gym"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_below="@+id/textView8"
            android:layout_alignTop="@id/textView9"
            android:layout_alignBottom="@id/textView9"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/cardView"
            android:padding="1dp"
            app:srcCompat="@drawable/location" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imageView4"
            android:fontFamily="@font/open_sans_light"
            android:maxWidth="160dp"
            android:maxLines="1"
            android:text="Sanatal, Rajasthan"
            android:textColor="#ccffffff"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView9"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/cardView"
            android:fontFamily="@font/open_sans_light"
            android:isScrollContainer="true"
            android:maxWidth="200dp"
            android:maxLength="100"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:text="Well equipped, extremely well trained fitness trainer"
            android:textColor="#fff"
            android:textSize="12dp"
            android:textStyle="bold"
            android:verticalScrollbarPosition="right" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/RatingsBarCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:numStars="5"
            android:progressBackgroundTint="#000"
            android:progressBackgroundTintMode="multiply"
            android:rating="3.45" />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:padding="10dp"
                app:srcCompat="@drawable/arrow" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>
